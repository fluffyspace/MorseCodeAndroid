<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sockets.TestActivity"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/calibrationTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text=""
        android:textColor="@color/blue_ribbon"
        android:lines="2"
        android:textSize="30sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/bottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_ribbon"
        app:layout_constraintTop_toBottomOf="@id/calibrationTimer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="HAHAHAH"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/valuesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/obrub"
        tools:text="test"
        app:layout_constraintTop_toBottomOf="@id/bottomText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingVertical="10dp"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/valuesText"
        android:spinnerMode="dropdown"
        android:background="@android:drawable/btn_dropdown"/>
    <TextView
        android:id="@+id/threshold_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinner"
        android:lines="1"/>
    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/threshold_value"
        android:valueFrom="0f"
        android:valueTo="100f"
        android:stepSize="1f"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edittext_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Profile name"
        android:layout_marginBottom="5dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slider"
        android:paddingBottom="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enter_message_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Calibrate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittext_container"
        app:layout_constraintRight_toLeftOf="@id/rename"/>
    <Button
        android:id="@+id/rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Rename"
        app:layout_constraintLeft_toRightOf="@id/start"
        app:layout_constraintTop_toBottomOf="@id/edittext_container"
        app:layout_constraintRight_toLeftOf="@id/delete"/>
    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Delete"
        app:layout_constraintLeft_toRightOf="@id/rename"
        app:layout_constraintTop_toBottomOf="@id/edittext_container"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/delete"
        android:id="@+id/legStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:lines="1"
        android:background="@color/blue_ribbon"
        android:text="Leg status"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/legStatus"
        android:id="@+id/currentXYZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="Leg status"
        android:layout_marginTop="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>