<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".SettingsActivity"
        android:id="@+id/timing_configuration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vibration_configuration"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@drawable/obrub"
            android:visibility="gone">
            <TextView
                android:id="@+id/pwm_on_status"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/pwm_on"
                android:textSize="20sp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"/>
            <ImageButton
                android:id="@+id/aaa_up"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                android:scaleType="fitCenter"
                android:contentDescription="@string/increase_pwm_on"/>
            <ImageButton
                android:id="@+id/aaa_down"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:scaleType="fitCenter"
                android:contentDescription="@string/decrease_pwm_on" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@drawable/obrub"
            android:visibility="gone">
            <TextView
                android:id="@+id/pwm_off_status"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/pwm_off"
                android:textSize="20sp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"/>
            <ImageButton
                android:id="@+id/sss_up"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                android:scaleType="fitCenter"
                android:contentDescription="@string/increase_pwm_off"/>
            <ImageButton
                android:id="@+id/sss_down"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:scaleType="fitCenter"
                android:contentDescription="@string/decrease_pwm_off" />
        </LinearLayout>
        <Button
            android:id="@+id/speed_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Brzina točke"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@drawable/obrub"
            android:visibility="gone">
            <TextView
                android:id="@+id/otu_status"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/otu"
                android:textSize="20sp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"/>
            <ImageButton
                android:id="@+id/otu_up"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                android:scaleType="fitCenter"/>
            <ImageButton
                android:id="@+id/otu_down"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:scaleType="fitCenter" />
        </LinearLayout>
        <TextView
            android:id="@+id/morse_timing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Timing:"
            android:gravity="left"
            android:textSize="20sp"
            android:padding="10dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/foot_calibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/foot_calibration"
            android:padding="20dp"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/socketio_ip"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:paddingTop="10dp"
            android:visibility="gone"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="http://"
            android:visibility="gone">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/socketioip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:visibility="gone">
            <Button
                android:id="@+id/save_settings"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/save_settings"/>
            <!--<Button
                android:id="@+id/reset_settings"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/reset_settings"
                android:layout_marginLeft="10dp"/>-->
        </LinearLayout>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/obrub"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_text_to_test"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="10dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_some_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/vibrate_letters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <!--<EditText
                android:id="@+id/vibrate_letters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="20sp"
                android:text="test"
                android:gravity="center"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp">
            <Button
                android:id="@+id/vibrate_button"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/test_vibration"
                android:paddingVertical="20dp"/>
            <Button
                android:id="@+id/vibrate_stop_button"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/stop_vibration"
                android:paddingVertical="20dp"
                android:layout_marginLeft="10dp"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/obrub"
            android:layout_marginVertical="10dp"/>
        <Button
            android:id="@+id/award_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Interval nagrađivanja"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@drawable/obrub"
            android:layout_marginVertical="20dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/award_status"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Interval nagrađivanja"
                android:textSize="20sp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"/>
            <ImageButton
                android:id="@+id/award_up"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                android:scaleType="fitCenter"/>
            <ImageButton
                android:id="@+id/award_down"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:scaleType="fitCenter" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/obrub"
            android:layout_marginVertical="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/physical_buttons"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/registered_physical_keys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:text="@string/registered_physical_keys_for_typing_morse_code"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">
            <Button
                android:id="@+id/add_physical_key"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/add_key"/>
            <Button
                android:id="@+id/remove_physical_key"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/remove_key"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/physical_keys_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/add_remove_key_instruction"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/obrub"
            android:layout_marginVertical="10dp"/>
        <Button
            android:id="@+id/reset_settings"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_settings"
            android:padding="15dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>