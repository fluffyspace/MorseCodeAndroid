<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaygroundActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:paddingBottom="10dp"
        android:text="Ispod možete isprobati kako morsov kod funkcionira."
        android:textAllCaps="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:paddingBottom="10dp"
        android:text="Držući tipku se puni gornja traka, puštajući tipku se puni donja traka."
        android:textAllCaps="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:paddingBottom="10dp"
        android:text="Vremenska ograničenja su ista kao kod pravog slanja morseovog koda, zato je bitno izvježbati se ovdje prije upotrebe aplikacije."
        android:textAllCaps="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:paddingBottom="15dp"
        android:text="Vremenska ograničenja moguće je podesiti u postavkama aplikacije."
        android:textAllCaps="false" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/visual_feedback_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_visual_feedback"/>

    <Button
        android:id="@+id/tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAP/HOLD"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="30dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>