<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/vibration_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/toggle_timing_configuration"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toggle timing configuration"
                android:padding="10dp"/>
            <LinearLayout
                android:id="@+id/timing_configuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@drawable/obrub"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timing configuration: "
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:padding="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:background="@drawable/obrub">
                    <TextView
                        android:id="@+id/aaa_status"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="@string/aaa"
                        android:textSize="20sp"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                    <ImageButton
                        android:id="@+id/aaa_up"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                        android:scaleType="fitCenter"/>
                    <ImageButton
                        android:id="@+id/aaa_down"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:scaleType="fitCenter" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:background="@drawable/obrub">
                    <TextView
                        android:id="@+id/sss_status"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="@string/sss"
                        android:textSize="20sp"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                    <ImageButton
                        android:id="@+id/sss_up"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                        android:scaleType="fitCenter"/>
                    <ImageButton
                        android:id="@+id/sss_down"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:scaleType="fitCenter" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:background="@drawable/obrub">
                    <TextView
                        android:id="@+id/otu_status"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="@string/otu"
                        android:textSize="20sp"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                    <ImageButton
                        android:id="@+id/otu_up"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                        android:scaleType="fitCenter"/>
                    <ImageButton
                        android:id="@+id/otu_down"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:scaleType="fitCenter" />
                </LinearLayout>

                <TextView
                    android:id="@+id/morse_timing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Timing:"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/save_settings"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save settings"
                    android:padding="10dp"/>
            </LinearLayout>

            <!-- oneTimeUnit -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/obrub"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sample text to test:"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:padding="10dp"/>

                <EditText
                    android:id="@+id/vibrate_letters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_200"
                    android:padding="20dp"
                    android:textSize="20sp"
                    android:text="test"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/vibrate_button"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vibrate in morse"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/vibrate_stop_button"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="stop vibrating"
                    android:padding="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/service_not_started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service not started!"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#ff0000"
            android:textColor="@color/white"
            android:padding="20dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/reload_from_service"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reload all from service"
            android:padding="10dp"/>

        <Button
            android:id="@+id/playground"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playground"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/lista_poruka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Povijest poruka:"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>